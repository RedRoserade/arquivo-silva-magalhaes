@model IEnumerable<TechnicalDocument>
<div id="afsm-list-contents">
    <table class="table table-striped table-hover afsm-dohighlight">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UploadDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastModificationDate)
                </th>
                <th>
                    @UiStrings.Actions
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UploadDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModificationDate)
                </td>

                <td>
                    <form class="btn-group" method="post" action="@Url.Action("Delete", new { id = item.Id })">
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-default" title="@UiStrings.Details">
                            <span class="glyphicon glyphicon-info-sign"></span>
                        </a>

                        <a class="btn btn-default" title="@UiStrings.Download" target="_blank" href="@Url.Content("~/Public/TechnicalDocuments/" + item.FileName)">
                            <span class="glyphicon glyphicon-download"></span>
                        </a>

                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-default" title="@UiStrings.Edit">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>

                        @Html.AntiForgeryToken()
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger" title="@UiStrings.Delete" data-afsm-show-modal="true">
                            <span class="glyphicon glyphicon-floppy-remove"></span>
                        </a>
                    </form>
                </td>
            </tr>
        }
    </table>

    <div class="panel-footer">
        <div class="text-center afsm-pagination">
            @Html.PagedListPager((IPagedList)Model, (p) => Url.Action("Index", new { pageNumber = p, query = ViewBag.Query }))
        </div>
    </div>
</div>