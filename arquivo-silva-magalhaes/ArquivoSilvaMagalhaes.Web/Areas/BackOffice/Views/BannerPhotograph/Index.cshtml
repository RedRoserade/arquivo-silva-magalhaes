@model IEnumerable<TranslatedViewModel<Banner, BannerTranslation>>

@{
    ViewBag.Title = BannerStrings.EntityNamePlural;

    Layout = "~/Areas/BackOffice/Views/Shared/_IndexPageLayout.cshtml";
}

<div class="row panel-body">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Url.Content("~/Public/Banners/" + item.Entity.UriPath)">
                <div class="caption">
                    <h3 class="text-center">@item.Translation.Caption</h3>

                    <div class="text-center">
                        <div class="btn-group">
                            <a href="@Url.Action("Details", new { item.Entity.Id })"
                               class="btn btn-default"
                               role="button"><span class="glyphicon glyphicon-info-sign"></span></a>

                            <a href="@Url.Action("Edit", new { item.Entity.Id })"
                               class="btn btn-default"
                               role="button"><span class="glyphicon glyphicon-edit"></span></a>

                            <a href="@Url.Action("Delete", new { item.Entity.Id })"
                               class="btn btn-danger"
                               role="button"><span class="glyphicon glyphicon-floppy-remove"></span></a>
                        </div>
                    </div>
                </div>

                
            </div>
        </div>
    }
</div>

