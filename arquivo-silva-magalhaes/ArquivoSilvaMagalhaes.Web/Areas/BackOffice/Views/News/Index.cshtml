@model IEnumerable<TranslatedViewModel<NewsItem, NewsItemTranslation>>

@{
    ViewBag.Title = NewsItemStrings.EntityNamePlural;
    Layout = "~/Areas/BackOffice/Views/Shared/_IndexPageLayout.cshtml";
}
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Translation.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity.PublishDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity.HideAfterExpiry)
            </th>
            <th>
                @UiStrings.Actions
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Translation.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entity.PublishDate)
            </td>
            <td>
                @(item.Entity.HideAfterExpiry ? UiStrings.Yes : UiStrings.No)
            </td>
            <td>
                <form class="btn-group" method="post" action="@Url.Action("Delete", new { id = item.Entity.Id })">
                    <a href="@Url.Action("Details", new { id = item.Entity.Id })" class="btn btn-default" title="@UiStrings.Details">
                        <span class="glyphicon glyphicon-info-sign"></span>
                    </a>

                    <a href="@Url.Action("Edit", new { id = item.Entity.Id })" class="btn btn-default" title="@UiStrings.Edit">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>

                    @Html.AntiForgeryToken()
                    <a href="@Url.Action("Delete", new { id = item.Entity.Id })" class="btn btn-danger" title="@UiStrings.Delete" data-afsm-show-modal="true">
                        <span class="glyphicon glyphicon-floppy-remove"></span>
                    </a>
                </form>
            </td>
        </tr>
    }
</table>