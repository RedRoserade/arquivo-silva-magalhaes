@model DigitalPhotograph

@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.SpecimenId)

<div class="form-group col-sm-3">
    <img class="img-thumbnail img-responsive"
         style="max-height: 200px;"
         src="@Url.Action("GetImage", "DigitalPhotographs", new { id = Model.Id, size = "thumb" })" />
</div>

<div class="form-group col-sm-9">
    @Html.LabelFor(model => model.Notes, new { @class = "control-label col-sm-2" })

    <div class="col-sm-10">
        @Html.TextAreaFor(model => model.Notes, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Notes)
    </div>
</div>

<div class="form-group col-sm-9">
    @Html.LabelFor(model => model.ScanDate, new { @class = "control-label col-sm-2" })

    <div class="col-sm-10">
        @Html.DatePickerFor(model => model.ScanDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ScanDate)
    </div>
</div>