@model IEnumerable<ArquivoSilvaMagalhaes.Models.SiteModels.NewsItem>

<div class="column_content">
    <h2 class="page_title">@Html.DisplayName(ArquivoSilvaMagalhaes.Web.I18n.FrontOfficeStrings.News)</h2>
    <table class="table">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <h3><b>@Html.DisplayFor(modelItem => item.Translations.LastOrDefault().Title)</b></h3>
                    <h4>@Html.DisplayFor(modelItem => item.Translations.LastOrDefault().Heading)</h4>
                    <h5>@Html.DisplayFor(modelItem => item.PublishDate)</h5>
                    @Html.ActionLink(ArquivoSilvaMagalhaes.Web.I18n.FrontOfficeStrings.ReadNews, "Details", new { id = item.Id })
                </td>
                <td>
                    
                </td>
            </tr>
        }
    </table>
</div>


@{
    ViewBag.Title = CollectionStrings.EntityNamePlural;
    Layout = "~/Views/Shared/_IndexPageLayout.cshtml";
}