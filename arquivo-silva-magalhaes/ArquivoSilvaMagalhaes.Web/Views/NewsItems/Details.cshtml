@model IEnumerable<ArquivoSilvaMagalhaes.Models.SiteModels.NewsItem>

<div class="column_content">
    <h2 class="page_title">Notícias</h2>
    <table class="table" style="text-align:justify">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <h3><b>@Html.DisplayFor(modelItem => item.Translations.LastOrDefault().Title)</b></h3>
                    <h4>@Html.DisplayFor(modelItem => item.Translations.LastOrDefault().Heading)</h4>
                    <p>@Html.DisplayFor(modelItem => item.Translations.LastOrDefault().TextContent)</p>
                    <p>@Html.DisplayFor(modelItem => item.Attachments.LastOrDefault().FileName)</p>
                    <h5>@Html.DisplayFor(modelItem => item.PublishDate)</h5><br />
                    @Html.ActionLink(ArquivoSilvaMagalhaes.Web.I18n.FrontOfficeStrings.Back, "Index", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>