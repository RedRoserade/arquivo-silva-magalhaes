@model IEnumerable<TranslatedViewModel<Document, DocumentTranslation>>

@{
    ViewBag.Title = "Pesquisar Documentos";
}

<h2>Pesquisar Documentos</h2>
<hr />

<div data-afsm-ajax="true" data-afsm-id="#afsm-search-results">
    <form method="get"
          class="form-horizontal"
          data-afsm-ajax="true"
          action="@Url.Action("Index", "Search")">

        <div class="input-group">
            <input type="search" class="form-control" name="query" value="@ViewBag.Query" />
            <span class="input-group-btn">
                <button type="submit" class="btn btn-default">Pesquisar documentos</button>
            </span>
        </div>

    </form>

    @Html.Partial("_SearchResults")
</div>
</div>



@section scripts {
    @Scripts.Render("~/Scripts/frontoffice/ajax-pagination.js")
}
