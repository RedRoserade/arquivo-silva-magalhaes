@using PagedList;
@using PagedList.Mvc;

@model IEnumerable<ArquivoSilvaMagalhaes.Models.ArchiveModels.CollectionTranslation>

<h2>@Html.DisplayName(ArquivoSilvaMagalhaes.Web.I18n.FrontOfficeStrings.Search)</h2>
<hr />
<p>@Html.DisplayName(ArquivoSilvaMagalhaes.Web.I18n.FrontOfficeStrings.SearchMessage)</p>
<form method="get">
    <div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-default">@Html.DisplayName(ArquivoSilvaMagalhaes.Web.I18n.FrontOfficeStrings.Search)</button>
                </span>
                <input type="search" autofocus="" name="SearchTerm" class="form-control" />
            </div>
        </div>
    </div>
</form>

<hr style="visibility: hidden" />

<ul class="media-list">
    @foreach (var item in Model)
    {
        <li class="media">
            <div class="media-body">
                <a href="~/Documents/Index/@item.CollectionId">
                    <h4 class="media-heading">@item.Title</h4>
                </a>
                <h5>@item.Provenience</h5>
                <p>
                    @Html.DisplayFor(model => item.Description)
                </p>
            </div>
        </li>
    }
</ul>
@{
    ViewBag.Title = CollectionStrings.EntityNamePlural;
    Layout = "~/Views/Shared/_IndexPageLayout.cshtml";
}