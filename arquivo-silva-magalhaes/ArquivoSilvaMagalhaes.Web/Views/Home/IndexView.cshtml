@model IList<ArquivoSilvaMagalhaes.Models.SiteModels.BannerTranslation>


<div id="afsm-carousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        @for (var i = 0; i < Model.Count; i++)
        {
            <li data-target="#afsm-carousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
        }
    </ol>

    <div class="carousel-inner">

        @for (var i = 0; i < Model.Count; i++)
        {
            var b = Model[i];
            <div class="item @(i == 0 ? "active" : "")">
                <div class="afsm-banner-item-container"
                     style="background-image: url(@Url.Content("~/Public/Banners/" + b.BannerPhotograph.UriPath));">

                    @*<img src="~/Public/Banners/@b.BannerPhotograph.UriPath">*@
                </div>
                <div class="carousel-caption">
                    @Html.DisplayFor(modelItem => b.Caption)
                </div>
            </div>
        }
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#afsm-carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#afsm-carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>
<div class="row">

    <div class="col-md-3">
        <h4>@Html.ActionLink(LayoutStrings.News, "Index", "NewsItems")</h4>
        <a href="~/NewsItems">
            <img src="~/images/news.png" class="left no_border" alt="" style="margin-top: 10px;
                                                                margin-right: 10px" />
