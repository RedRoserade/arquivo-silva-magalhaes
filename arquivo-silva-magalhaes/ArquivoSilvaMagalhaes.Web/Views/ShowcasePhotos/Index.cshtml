@model IEnumerable<ArquivoSilvaMagalhaes.Models.ArchiveModels.ShowcasePhotoTranslation>

<h2 class="page_title">Fotografia em destaque</h2>
<hr />
<div class="space"> </div>
<div class="clear"> </div>

@foreach (var item in Model)
{
    <div align="center">
        <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
        <img class="img-responsive" src="~/Public/Images/@Html.DisplayFor(modelItem => item.ShowcasePhoto.Image.ImageUrl)_large.jpg" />
        @Html.DisplayFor(modelItem => item.ShowcasePhoto.Image.Specimens)
        @Html.DisplayFor(modelItem => item.Comment)
        @Html.DisplayFor(modelItem => item.ShowcasePhoto.Image.ProductionDate)
        <h6>@Html.ActionLink("Informações", "Details", new { id = item.ShowcasePhoto.Id })</h6>
        <br />
    </div>
}


@{
    ViewBag.Title = ShowcasePhotoStrings.EntityNamePlural;
    Layout = "~/Views/Shared/_IndexPageLayout.cshtml";
}
