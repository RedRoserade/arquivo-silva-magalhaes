@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var pagerOptions = PagedListRenderOptions.TwitterBootstrapPagerAligned;
    pagerOptions.Display = PagedListDisplayMode.IfNeeded;
    pagerOptions.LinkToNextPageFormat = "Próximo";
    pagerOptions.LinkToPreviousPageFormat = "Anterior";
}

@RenderBody()

@Html.PagedListPager((IPagedList)Model, (p) => Url.Action("Index", new { pageNumber = p }), pagerOptions)

@section scripts {
    @RenderSection("scripts", required: false)
}