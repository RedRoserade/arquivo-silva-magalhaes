@using PagedList;
@using PagedList.Mvc;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@RenderBody()

<div class="text-center">
    @Html.PagedListPager((IPagedList)Model, (p) => Url.Action("Index", new { pageNumber = p }), new PagedListRenderOptions
    {
        Display = PagedListDisplayMode.Always
    })
</div>


@section scripts {
    @RenderSection("scripts", required: false)
}