@model ArquivoSilvaMagalhaes.Models.ArchiveModels.DigitalPhotograph
<div class="row">
    @* Picture *@
    <div class="col-md-3">
        <img class="img-responsive afsm-modal-preview" src="@Url.Action("GetPicture", new { id=Model.Id, size = "Thumb" })" />
    </div>

    @* Details *@
    <div class="col-md-7">
        <h4>@Html.DisplayFor(model => model.OriginalFileName)</h4>

        <div class="row">
            <strong>@Html.DisplayNameFor(model => model.Process)</strong>
            <span>@Html.DisplayFor(model => model.Process)</span>
        </div>
        <div class="row">
            <strong>@Html.DisplayNameFor(model => model.IsVisible)</strong>
            <span>@(Model.IsVisible ? UiStrings.Yes : UiStrings.No)</span>
        </div>

        <div class="row">
            <strong>@Html.DisplayNameFor(model => model.CopyrightInfo)</strong>
            <span>@Model.CopyrightInfo</span>
        </div>
    </div>

    @* Actions *@
    <div class="row col-md-offset-11">
        <form class="btn-group" method="post" action="@Url.Action("DeletePhoto", new { id = Model.Id, redirectTo = ViewBag.ActionToRedirect })">
            <a class="btn btn-default" title="@UiStrings.Edit" href="@Url.Action("EditPhotoDetails", new { id = Model.Id })">
                <span class="glyphicon glyphicon-edit"></span>
            </a>
            @Html.AntiForgeryToken()
            <a href="@Url.Action("DeletePhoto", new { id = Model.Id })" class="btn btn-danger" title="@UiStrings.Delete" data-afsm-show-modal="true" data-afsm-link="">
                <span class="glyphicon glyphicon-floppy-remove"></span>
            </a>
        </form>
    </div>
</div>

<hr />
