@model IEnumerable<ArquivoSilvaMagalhaes.Models.ArchiveModels.Document>

@{
    ViewBag.Title = "Index";
}

<h2>Documentos</h2>

<p>
    @Html.ActionLink("Criar novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ResponsibleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocumentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatalogationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatalogCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ResponsibleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DocumentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CatalogationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CatalogCode)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) <br />
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) <br />
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
@Html.ActionLink("Início", "../Home")