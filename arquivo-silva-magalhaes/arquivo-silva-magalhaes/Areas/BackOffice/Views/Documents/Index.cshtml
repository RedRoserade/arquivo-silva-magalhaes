@model IEnumerable<ArquivoSilvaMagalhaes.Models.ArchiveModels.Document>

@{
    ViewBag.Title = "Index";
}

<h2>Documentos</h2>

<div class="btn-toolbar btn-group" role="toolbar">

    <a class="btn btn-default" href="@Url.Action("Index", "Home")">
        <span class="glyphicon glyphicon-arrow-left"></span>
    </a>

    <a class="btn btn-default" title="@UiStrings.Create" href="@Url.Action("Create")">
        <span class="glyphicon glyphicon-plus"></span>
    </a>
</div>
<table class="table table-striped table-houver">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ResponsibleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocumentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatalogationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatalogCode)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ResponsibleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatalogationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatalogCode)
            </td>
            <td>
                <form class="btn-group" method="post" action="@Url.Action("Delete", new { id = item.Id })">
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-default" title="@UiStrings.Details">
                        <span class="glyphicon glyphicon-info-sign"></span>
                    </a>

                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-default" title="@UiStrings.Edit">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>

                    @Html.AntiForgeryToken()
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger" title="@UiStrings.Delete" data-afsm-show-modal="true">
                        <span class="glyphicon glyphicon-floppy-remove"></span>
                    </a>
                </form>
            </td>
        </tr>
    }

</table>

@section Scripts {
    @Html.Partial("_DeleteConfirmModal")
}
