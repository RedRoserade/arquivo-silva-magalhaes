@model ArquivoSilvaMagalhaes.Models.ArchiveModels.Document

@{
    ViewBag.Title = "Edit";
}

<h2>Editar documento</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.ResponsibleName, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.ResponsibleName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ResponsibleName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DocumentDate, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.DocumentDate, new { htmlAttributes = new { @class = "form-control", @Value = Model.DocumentDate.ToString("yyyy-MM-dd") } })
                @Html.ValidationMessageFor(model => model.DocumentDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CatalogationDate, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.CatalogationDate, new { htmlAttributes = new { @class = "form-control", @Value = Model.CatalogationDate.ToString("yyyy-MM-dd") } })
                @Html.ValidationMessageFor(model => model.CatalogationDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CatalogCode, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.CatalogCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CatalogCode, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    @Html.Partial("_SubmitbackPartial")
}
