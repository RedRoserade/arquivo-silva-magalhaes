@model DocumentEditViewModel

<div class="form-group">
    @Html.LabelFor(model => model.AvailableAuthors, new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.DropDownListFor(model => model.Document.AuthorId, Model.AvailableAuthors, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Document.AuthorId)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.AvailableCollections, new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.DropDownListFor(model => model.Document.CollectionId, Model.AvailableCollections, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Document.CollectionId)
    </div>
</div>
