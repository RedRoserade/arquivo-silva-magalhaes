            @Html.LabelFor(model => model.EventType, new { @class = "control-label col-md-2" })

            <div>
                
                @Html.EnumDropDownListFor(model => model.EventType)

                @Html.ValidationMessageFor(model => model.EventType)
            </div>
        </div>
       
        @Html.Partial("_EventI18nPartial")
    </div>
     @Html.Partial("_SubmitBackPartial")
}
