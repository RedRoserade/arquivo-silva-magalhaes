@model Event

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes do evento</h2>

<div class="btn-toolbar btn-group" role="toolbar">
    <a class="btn btn-default" href="@Url.Action("Index")" title="@UiStrings.GoToList">
        <span class="glyphicon glyphicon-arrow-left"></span>
    </a>

    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-default" title="@UiStrings.Edit">
        <span class="glyphicon glyphicon-edit"></span>
    </a>

    <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger" title="@UiStrings.Delete" data-afsm-show-modal="true">
        <span class="glyphicon glyphicon-floppy-remove"></span>
    </a>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Place)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Place)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Coordinates)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Coordinates)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VisitorInformation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VisitorInformation)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartMoment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartMoment)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndMoment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndMoment)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PublishDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PublishDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ExpiryDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExpiryDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HideAfterExpiry)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HideAfterExpiry)
        </dd>
    </dl>

    @foreach (var t in Model.EventTexts)
        {
        
        <div>
            <h4>@UiStrings.Language: @ArquivoSilvaMagalhaes.Utilitites.LanguageDefinitions.GetLanguageName(t.LanguageCode)</h4>

            <dl>
                <dt>
                    @Html.DisplayNameFor(model => t.Title)
                </dt>
                <dd>
                    @t.Title
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => t.Heading)
                </dt>
                <dd>
                    @t.Heading
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => t.SpotLight)
                </dt>
                <dd>
                    @t.SpotLight
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => t.TextContent)
                </dt>
                <dd>
                    @t.TextContent
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => t.LanguageCode)
                </dt>
                <dd>
                    @t.LanguageCode
                </dd>
            </dl>
           </div>    
    }
    </div>

@section Scripts {
    @Html.Partial("_DeleteConfirmModal")
}