@model EventEditViewModel

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@if (Model.AvailableLanguages != null)
{
    <div class="form-group">
        @Html.LabelFor(model => model.LanguageCode, htmlAttributes: new { @class = "control-label col-md-2" })

        <div>
            @Html.DropDownListFor(model => model.LanguageCode, Model.AvailableLanguages, new { @class = "form-control col-md-2" })
        </div>
    </div>
}


