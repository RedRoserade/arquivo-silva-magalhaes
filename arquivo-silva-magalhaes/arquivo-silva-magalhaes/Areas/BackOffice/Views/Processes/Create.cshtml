@model Process

@{
    ViewBag.Title = ProcessStrings.CreateTitleFormat;

    Layout = "~/Areas/BackOffice/Views/Shared/_EditPageLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Translations[0].LanguageCode)

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.Translations[0].Value, htmlAttributes: new { @class = "control-label col-sm-2" })

            <div class="form-group col-sm-10">
                @Html.EditorFor(model => model.Translations[0].Value, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Translations[0].Value, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">@UiStrings.Create</button>
                @Html.ActionLink(UiStrings.Cancel, "Index", null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}
