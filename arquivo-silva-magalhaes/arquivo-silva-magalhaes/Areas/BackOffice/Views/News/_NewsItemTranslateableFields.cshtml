@model NewsItemTranslation

@Html.HiddenFor(model => model.LanguageCode)
@Html.HiddenFor(model => model.NewsItemId)

<div class="form-group">
    @Html.LabelFor(model => model.Title, new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Heading, new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.TextAreaFor(model => model.Heading, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Heading, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.TextContent, new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.TextAreaFor(model => model.TextContent, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TextContent, "", new { @class = "text-danger" })
    </div>
</div>
