@model IEnumerable<NewsItemTranslation>

@{
    ViewBag.Title = NewsItemStrings.EntityNamePlural;
    Layout = "~/Areas/BackOffice/Views/Shared/_IndexPageLayout.cshtml";
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)    
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NewsItem.PublishDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NewsItem.HideAfterExpiry)
                </th>
                <th>
                    @UiStrings.Actions
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsItem.PublishDate)
                </td>
                <td>
                    @(item.NewsItem.HideAfterExpiry ? UiStrings.Yes : UiStrings.No)
                </td>
                <td>
                    <form class="btn-group" method="post" action="@Url.Action("Delete", new { id = item.NewsItemId })">
                        <a href="@Url.Action("Details", new { id = item.NewsItemId })" class="btn btn-default" title="@UiStrings.Details">
                            <span class="glyphicon glyphicon-info-sign"></span>
                        </a>

                        <a href="@Url.Action("Edit", new { id = item.NewsItemId })" class="btn btn-default" title="@UiStrings.Edit">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>

                        @Html.AntiForgeryToken()
                        <a href="@Url.Action("Delete", new { id = item.NewsItemId })" class="btn btn-danger" title="@UiStrings.Delete" data-afsm-show-modal="true">
                            <span class="glyphicon glyphicon-floppy-remove"></span>
                        </a>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>