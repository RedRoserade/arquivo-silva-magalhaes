@model IEnumerable<CollectionTranslation>


@{
    ViewBag.Title = CollectionStrings.EntityNamePlural;
    Layout = "~/Areas/BackOffice/Views/Shared/_IndexPageLayout.cshtml";
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Collection.CatalogCode)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Collection.IsVisible)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Dimension)
            </th>

            <th>@UiStrings.Actions</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Collection.CatalogCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @(item.Collection.IsVisible ? UiStrings.Yes : UiStrings.No)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Dimension)
            </td>

            <td>
                <form class="btn-group" method="post" action="@Url.Action("Delete", new { id = item.CollectionId })">
                    <a href="@Url.Action("Details", new { id = item.CollectionId })" class="btn btn-default" title="@UiStrings.Details">
                        <span class="glyphicon glyphicon-info-sign"></span>
                    </a>

                    <a href="@Url.Action("Edit", new { id = item.CollectionId })" class="btn btn-default" title="@UiStrings.Edit">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>

                    @Html.AntiForgeryToken()
                    <a href="@Url.Action("Delete", new { id = item.CollectionId })" class="btn btn-danger" title="@UiStrings.Delete" data-afsm-show-modal="true" data-afsm-delete-warning="@CollectionStrings.DeleteWarningMessage">
                        <span class="glyphicon glyphicon-floppy-remove"></span>
                    </a>
                </form>
            </td>
        </tr>
    }
</table>