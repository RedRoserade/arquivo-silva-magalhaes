@model IEnumerable<Collection>


@{
    ViewBag.Title = CollectionStrings.EntityNamePlural;
}

<h2>@CollectionStrings.EntityNamePlural</h2>

<div class="btn-toolbar" role="toolbar">

    <a class="btn btn-default" href="@Url.Action("Index", "Home")">
        <span class="glyphicon glyphicon-arrow-left"></span> @UiStrings.Back
    </a>

    <a class="btn btn-default" title="@UiStrings.Create" href="@Url.Action("Create")">
        <span class="glyphicon glyphicon-plus"></span> @UiStrings.New
    </a>
</div>
<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CatalogCode)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Translations[0].Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IsVisible)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Translations[0].Dimension)
            </th>
            
            <th>@UiStrings.Actions</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        var t = item.Translations.FirstOrDefault();
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatalogCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => t.Title)
            </td>

            <td>
                @(item.IsVisible ? UiStrings.Yes : UiStrings.No)
            </td>

            <td>
                @Html.DisplayFor(modelItem => t.Dimension)
            </td>
           
            <td>
                <form class="btn-group" method="post" action="@Url.Action("Delete", new { id = item.Id })">
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-default" title="@UiStrings.Details">
                        <span class="glyphicon glyphicon-info-sign"></span>
                    </a>

                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-default" title="@UiStrings.Edit">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>

                    @Html.AntiForgeryToken()
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger" title="@UiStrings.Delete" data-afsm-show-modal="true" data-afsm-delete-warning="@CollectionStrings.DeleteWarningMessage">
                        <span class="glyphicon glyphicon-floppy-remove"></span>
                    </a>
                </form>
            </td>
        </tr>
    }

</table>

@Html.PagedListPager((IPagedList)Model, (p) => Url.Action("Index", new { pageNumber = p }))
@section Scripts {
    @Html.Partial("_DeleteConfirmModal")
}