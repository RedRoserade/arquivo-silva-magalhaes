@model IEnumerable<ArquivoSilvaMagalhaes.Models.SiteModels.DocumentAttachment>

@{
    ViewBag.Title = "Index";
}

<h2>Documento Anexo</h2>

<p>
    @Html.ActionLink("Criar novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MimeFormat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UriPath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MimeFormat)
        </td>
