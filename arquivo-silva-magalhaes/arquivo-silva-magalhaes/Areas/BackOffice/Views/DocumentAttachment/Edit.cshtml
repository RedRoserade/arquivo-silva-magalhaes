@model ArquivoSilvaMagalhaes.Models.SiteModels.Attachment

@{
    ViewBag.Title = "Edit";
}

<h2>Editar o documento anexo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UriPath, new { @class = "control-label" })
            <div>
                <input type="file" accept="image/*" name="UriPath" required />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MimeFormat, new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.MimeFormat)
                @Html.ValidationMessageFor(model => model.MimeFormat)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LanguageCode, new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.LanguageCode)
                @Html.ValidationMessageFor(model => model.LanguageCode)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Size, new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Size)
                @Html.ValidationMessageFor(model => model.Size)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
    </div>
}

@Html.Partial("_SubmitBackPartial")