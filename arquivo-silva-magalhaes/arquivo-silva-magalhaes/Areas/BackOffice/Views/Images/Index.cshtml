@model IEnumerable<Image>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.Title)
        </th>*@

        <th>
            @Html.DisplayNameFor(model => model.ImageCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductionDate)
        </th>


        <th>
            @UiStrings.Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        // var t = item.Translations.FirstOrDefault(it => it.LanguageCode == ArquivoSilvaMagalhaes.Utilitites.LanguageDefinitions.DefaultLanguage);

        <tr>

            @*<td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>*@

