@model IEnumerable<ArquivoSilvaMagalhaes.Models.ArchiveModels.ShowcasePhoto>

@{
    ViewBag.Title = "Index";
}

<h2>Fotografias destaque</h2>

<div class="btn-toolbar btn-group" role="toolbar">
    <a class="btn btn-default" href="@Url.Action("Index", "Home")">
        <span class="glyphicon glyphicon-arrow-left"></span>
    </a>
    <a class="btn btn-default" title="@UiStrings.Create" href="@Url.Action("Create")">
        <span class="glyphicon glyphicon-plus"></span>
    </a>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DigitalPhotograph.ScanDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommenterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommenterEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEmailVisible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisibleSince)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DigitalPhotograph.ScanDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommenterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommenterEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEmailVisible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisibleSince)
            </td>
            <td>
                <form class="btn-group" method="post" action="@Url.Action("Delete", new { id = item.Id })">
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-default" title="@UiStrings.Details">
                        <span class="glyphicon glyphicon-info-sign"></span>
                    </a>

                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-default" title="@UiStrings.Edit">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>

                    @Html.AntiForgeryToken()
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger" title="@UiStrings.Delete" data-afsm-show-modal="true">
                        <span class="glyphicon glyphicon-floppy-remove"></span>
                    </a>
                </form>
            </td>
        </tr>
    }
</table>
@section Scripts {
    @Html.Partial("_DeleteConfirmModal")
}