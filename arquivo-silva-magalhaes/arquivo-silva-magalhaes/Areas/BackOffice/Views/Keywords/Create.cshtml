@model Keyword
@{
    ViewBag.Title = KeywordStrings.CreateTitleFormat;

    Layout = "~/Areas/BackOffice/Views/Shared/_EditPageLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @Html.HiddenFor(model => Model.Translations[0].KeywordId)
        @Html.HiddenFor(model => Model.Translations[0].LanguageCode)

        <div class="form-group">
            @Html.LabelFor(model => model.Translations[0].Value, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Translations[0].Value, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Translations[0].Value, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.Partial("_SubmitBackPartial", UiStrings.Create)
    </div>
}



