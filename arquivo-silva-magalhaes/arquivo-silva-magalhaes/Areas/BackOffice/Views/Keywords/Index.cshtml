@model IEnumerable<ArquivoSilvaMagalhaes.Models.ArchiveModels.Keyword>

@{
    ViewBag.Title = "Index";
}

<h2>Palavras chave</h2>

<p>
    @Html.ActionLink("Criar nova", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Value)</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Value</td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) <br />
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) <br />
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Início", "../Home")