@model IEnumerable<KeywordTranslation>

@{
    ViewBag.Title = KeywordStrings.EntityNamePlural;
}

<h2>@KeywordStrings.EntityNamePlural</h2>

<div class="btn-toolbar" role="toolbar">
    <div class="btn-group">

        <a class="btn btn-default" href="@Url.Action("Index", "Home")">
            <span class="glyphicon glyphicon-arrow-left"></span> Retroceder
        </a>
        <a class="btn btn-default" title="@UiStrings.Create" href="@Url.Action("Create")">
            <span class="glyphicon glyphicon-plus"></span> Novo
        </a>
    </div>
</div>
<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Value)</th>
            <th>@UiStrings.Actions</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Value</td>

            <td>
                <form class="btn-group" method="post" action="@Url.Action("Delete", new { id = item.KeywordId })">
                    <a href="@Url.Action("Details", new { id = item.KeywordId })" class="btn btn-default" title="@UiStrings.Details">
                        <span class="glyphicon glyphicon-info-sign"></span>
                    </a>

                    <a href="@Url.Action("Edit", new { id = item.KeywordId })" class="btn btn-default" title="@UiStrings.Edit">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>

                    @Html.AntiForgeryToken()
                    <a href="@Url.Action("Delete", new { id = item.KeywordId })" class="btn btn-danger" title="@UiStrings.Delete" data-afsm-show-modal="true">
                        <span class="glyphicon glyphicon-floppy-remove"></span>
                    </a>
                </form>
            </td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, (p) => Url.Action("Index", new { pageNumber = p }))

@section Scripts {
    @Html.Partial("_DeleteConfirmModal")
}