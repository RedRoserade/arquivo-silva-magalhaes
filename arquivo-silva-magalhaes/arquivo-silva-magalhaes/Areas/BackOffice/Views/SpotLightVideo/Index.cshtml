@model IEnumerable<ArquivoSilvaMagalhaes.Models.SiteModels.SpotlightVideo>

@{
    ViewBag.Title = "Index";
}

<h2>Videos destaque</h2>

<p>
      @Html.ActionLink("Criar novo video destaque", "Create")
</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UriPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemotionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPermanent)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                <a href="@(item.UriPath)"target="_blank">@item.UriPath</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RemotionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPermanent)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id }) <br />
                @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) <br />
                @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
@Html.ActionLink("Início", "../Home")