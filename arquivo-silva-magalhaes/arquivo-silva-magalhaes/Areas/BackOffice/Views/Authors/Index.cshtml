@model IEnumerable<Author>

@{
    ViewBag.Title = AuthorStrings.EntityNamePlural;
}

<h2>@AuthorStrings.EntityNamePlural</h2>

<div class="btn-toolbar" role="toolbar">
    <a class="btn btn-default" href="@Url.Action("Index", "Home")">
        <span class="glyphicon glyphicon-arrow-left"></span> @UiStrings.Back
    </a>
    <a class="btn btn-default" title="@UiStrings.Create" href="@Url.Action("Create")">
        <span class="glyphicon glyphicon-plus"></span> @UiStrings.New
    </a>
</div>

<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>
                @AuthorStrings.Name
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Nationality)
            </th>*@
            <th>
                @UiStrings.Actions
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @(String.Format("{0}, {1}", item.LastName, item.FirstName))
            </td>
            @*<td>  
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>*@
            <td>
                <form class="btn-group" method="post" action="@Url.Action("Delete", new { id = item.Id })">
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-default" title="@UiStrings.Details">
                        <span class="glyphicon glyphicon-info-sign"></span>
                    </a>

                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-default" title="@UiStrings.Edit">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>

                    @Html.AntiForgeryToken()
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger" title="@UiStrings.Delete" data-afsm-show-modal="true" data-afsm-delete-warning="@AuthorStrings.DeleteWarningMessage">
                        <span class="glyphicon glyphicon-floppy-remove"></span>
                    </a>
                </form>
                &nbsp;
                @Html.ActionLink(DataStrings.Collection__Collections, "Index", "Collections", new { authorId = item.Id }, null)
                &nbsp;
                @Html.ActionLink(DocumentStrings.EntityNamePlural, "Index", "Documents", new { authorId = item.Id }, null)
            </td>
        </tr>
    }

</table>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { pageNumber = page }))

@section Scripts {
    @Html.Partial("_DeleteConfirmModal")
}