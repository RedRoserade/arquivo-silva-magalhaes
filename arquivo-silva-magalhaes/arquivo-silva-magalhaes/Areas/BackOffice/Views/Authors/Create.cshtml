                @Html.EditorFor(model => model.Translations[0].Nationality, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Translations[0].Nationality, "", new { @class = "text-danger" })
            </div>
        </div>

