@model AuthorEditViewModel

@* Partial view for the form containing I18N-Able fields for an author. *@

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@if (ViewBag.AvailableLanguages != null)
{
    <div class="form-group">
        @Html.LabelFor(model => model.LanguageCode, htmlAttributes: new { @class = "control-label" })

        <div>
            @Html.DropDownListFor(model => model.LanguageCode, (IEnumerable<SelectListItem>) ViewBag.AvailableLanguages, new { @class = "form-control" })
        </div>
    </div>
}

<div class="form-group">
    @Html.LabelFor(model => model.Nationality, htmlAttributes: new { @class = "control-label" })
    <div>
        @Html.EditorFor(model => model.Nationality, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nationality, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Biography, htmlAttributes: new { @class = "control-label" })
    <div>
        @Html.EditorFor(model => model.Biography, new { htmlAttributes = new { rows = 5, @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Biography, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Curriculum, htmlAttributes: new { @class = "control-label" })
    <div>
        @Html.EditorFor(model => model.Curriculum, new { htmlAttributes = new { rows = 5, @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Curriculum, "", new { @class = "text-danger" })
    </div>
</div>