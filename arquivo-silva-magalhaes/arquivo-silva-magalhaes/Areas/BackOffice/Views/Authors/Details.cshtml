@model ArquivoSilvaMagalhaes.Models.ArchiveModels.Author

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes do autor</h2>

<div>
    <hr />
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DeathDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DeathDate)
        </dd>
    </dl>

    @foreach (var text in Model.AuthorTexts)
    {
        <div>
            <h4>@UiStrings.Language: @ArquivoSilvaMagalhaes.Utilitites.LanguageDefinitions.GetLanguageName(text.LanguageCode)</h4>

            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.Nationality)
                </dt>

                <dd>
                    @text.Nationality
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Curriculum)
                </dt>

                <dd>
                    @text.Curriculum
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Biography)
                </dt>
                <dd>
                    @text.Biography
                </dd>

            </dl>

            @Html.ActionLink(@UiStrings.Edit, "EditText", new { Id = text.Id })

            @*Only allow the removal of texts which are not the default language.*@
            @if (text.LanguageCode != ArquivoSilvaMagalhaes.Utilitites.LanguageDefinitions.DefaultLanguage)
            {
                @Html.ActionLink(@UiStrings.Delete, "DeleteText", new { Id = text.Id })
            }

            <hr />
        </div>
    }

    @if (ViewBag.AreLanguagesMissing)
    {
        
        @Html.ActionLink("Adicionar ideoma", "AddLanguage", new { Id = Model.Id })
    }

</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) <br />
    @Html.ActionLink("Voltar à lista", "Index")
</p>