@{
    Layout = "~/Areas/BackOffice/Views/Shared/_Layout.cshtml";
}

@section AdditionalStyles {
    @Styles.Render("~/Content/datepicker-bootstrap")
}

<h2>@ViewBag.Title</h2>

<hr />

@RenderBody()

@section Scripts {
    @Scripts.Render("~/bundles/bootstrap-date-picker")
    @*<script type="text/javascript" src="~/Scripts/locales/bootstrap-datepicker.@(System.Threading.Thread.CurrentThread.CurrentUICulture.Name).js"></script>*@
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("AdditionalScripts", false)

    <script type="text/javascript">
        $('[data-provide=datetimepicker]').datetimepicker();
    </script>
}