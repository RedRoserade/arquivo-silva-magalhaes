@model ArquivoSilvaMagalhaes.Models.LoginViewModel

@{
    ViewBag.Title = "Iniciar sessão";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Arquivo Fotográfico Silva Magalhães</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>

    <div class="body-content container">
        <section id="loginForm" style="max-width: 768px" class="center-block">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2 class="text-center">@ViewBag.Title</h2>
                <h4 class="text-center">Introduza o seu user name e palavra-passe</h4>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>

                <div class="form-group text-center">
                    <input type="checkbox" name="RememberMe" id="RememberMe" value="true" />
                    <label for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-default">Iniciar sessão</button>
                </div>

                @*<div class="form-group">
                    <div class="center-block">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="center-block">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>*@
            }
        </section>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>