<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        @ViewBag.Title @(ViewBag.Title != null ? "| " : "")Arquivo Fotográfico Silva Magalhães
    </title>

    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <link href='http://fonts.googleapis.com/css?family=Oswald|Merriweather' rel='stylesheet' type='text/css'>

    @Styles.Render("~/Content/frontoffice-styles")

    @Scripts.Render("~/bundles/modernizr")

    
</head>
<body>

    <div id="afsm-navbar" class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="@Url.Action("Index", "Home")" class="navbar-brand" title="Arquivo Fotográfico Silva Magalhães">
                    <img style="max-height: 30px; margin-top: -5px" src="~/Content/Images/logo.png" />
                </a>

                <a href="//www.cm-tomar.pt" target="_blank"  class="navbar-brand" title="Câmara Municipal de Tomar">
                    <img style="max-height: 30px; margin-top: -5px" src="~/images/cmt.png" />
                </a>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Acervo <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Autores", "Index", "Authors")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Coleções", "Index", "Collections")</li>
                            <li>@Html.ActionLink("Documentos", "Index", "Documents")</li>
                            <li>@Html.ActionLink("Imagens", "Index", "Images")</li>
                            <li>@Html.ActionLink("Espécies Fotográficas", "Index", "Specimens")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Formatos", "Index", "Formats")</li>
                            <li>@Html.ActionLink("Indexações", "Index", "Keywords")</li>
                            <li>@Html.ActionLink("Classificações", "Index", "Classifications")</li>
                            <li>@Html.ActionLink("Processos", "Index", "Processes")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Portal <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Eventos", "Index", "Events")</li>
                            <li>@Html.ActionLink("Notícias", "Index", "News")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Links", "Index", "ReferencedLink")</li>
                            <li>@Html.ActionLink("Documentos Técnicos", "Index", "TechnicalDocument")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Fotografias em destaque", "Index", "ShowcasePhotoes")</li>
                            <li>@Html.ActionLink("Vídeos destaque", "Index", "SpotLightVideo")</li>
                            <li>@Html.ActionLink("Fotografias banner", "Index", "BannerPhotograph")</li>
                        </ul>
                    </li>

                    @* TODO Roles... *@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administração <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Utilizadores", "Index", "Users")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Configurações", "Index", "Config")</li>
                        </ul>
                    </li>

                    <li class="navbar-link">
                        @Html.ActionLink("Front-Office", "Index", "Home", new { Area = "" }, null)
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div id="afsm-page-container" class="container">
        <div class="row" style="position: relative">

            <div id="afsm-sidebar" class="col-sm-3">
                <ul class="nav nav-stacked">
                    <li>
                        <a href="@Url.Action("Index", "Home")" title="@LayoutStrings.Index">
                            <img src="~/Content/Images/logo.png" />
                        </a>
                    </li>
                    <li>
                        <a href="//www.cm-tomar.pt" target="_blank" title="@LayoutStrings.Council"> <img src="~/images/cmt.png" alt="" /></a>
                    </li>

                    </ul>
                <ul class="nav">
                    <li>
                        <a href="@Url.Action("Index", "ShowcasePhotoes")">
                            @LayoutStrings.Showcase
                        </a>
                    </li>
                    @*<li>@Html.ActionLink(LayoutStrings.Contents, "Collections", "Home")</li>*@
                    <li><a href="~/Collections">ACERVO</a></li>
                    <li><a href="~/Search">PESQUISA</a></li>
                    <li><a href="~/NewsView">NOT&#205;CIAS</a></li>
                    <li><a href="~/EventsView">EVENTOS</a></li>
                    <li><a href="~/Home/History">HIST&#211;RIA</a></li>
                    <li><a href="~/TechnicalDocuments">DOCUMENTOS T&#201;CNICOS</a></li>
                    @*<li><a href="Loja">LOJA</a></li>*@
                    <li><a href="~/Contacts">CONTACTOS</a></li>
                    <li><a href="~/ReferencedLinks">LINKS &#218;TEIS</a></li>
                    <li><a href="~/Partnerships">PROJETOS E PARCERIAS</a></li>
                </ul>
            </div>

            <div id="afsm-page-content" style="height: 100%">
                @RenderBody()

                <hr />

                <footer class="text-center">
                    <p>
                        <a href="@Url.Action("About", "Home")">
                            &copy; @DateTime.Now.Year - Arquivo Fotográfico Silva Magalhães &amp; IPT
                        </a>
                    </p>
                </footer>
            </div>
        </div>
    </div>

    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @*@Scripts.Render("~/Scripts/frontoffice")*@

</body>
</html>
