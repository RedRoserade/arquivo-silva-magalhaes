@model ArquivoSilvaMagalhaes.Models.SiteModels.Archive

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Archive</h2>

@using (Html.BeginForm("Delete", "Archive", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class = "col-md-4 control-label" })
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-offset-4 col-md-12">

            <input type="submit" value="Delete" class="btn btn-default" onclick="confirmation()" />

        </div>
    </div>
    <script>
        function confirmation(){
            var x;
            var d = document.getElementById("Title");
        var r=confirm("Tem a certeza que pretende eliminar o arquivo?");
        if (r==true)
        {
            d.removeChild;
         x="Arquivo eliminado!";
        }
        else
        {
            document.getElementsById("Title");
        }
        document.getElementById("demo").innerHTML=x;
        }
    </script>

    
    
}

<div>
    @Html.ActionLink("Back to ArchivesList", "Index")
</div>
