@model ArquivoSilvaMagalhaes.Models.SiteModels.Archive

@{
    ViewBag.Title = "Create";
}

<h2>Create Archive</h2>

@using (Html.BeginForm("Create", "Archive", FormMethod.Post, new { @class="form-horizontal", role="form"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new {@class="col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Title, new { @class="form-control"})   
            </div>
        </div>    
        <div class="col-md-offset-2 col-md-10">
              <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    
}

<div>
    @Html.ActionLink("Back to ArchivesList", "Index")
</div>
