@model IEnumerable<ArquivoSilvaMagalhaes.Models.ArchiveModels.ShowcasePhoto>

@{
    ViewBag.Title = "Index";
}
<div class="page_content">
    <!-- lateral direita -->

    <div class="column_content">
        <h3 class="page_title">Fotografia em destaque</h3>
        <img src="../images/destaque.jpg" class="left no_border" alt="" style="margin-top: 10px;
                                margin-right: 10px" />
        <div class="space"> </div>
        <div class="clear"> </div>

    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CommenterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommenterEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEmailVisible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisibleSince)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DigitalPhotographId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CommenterName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommenterEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsEmailVisible)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VisibleSince)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DigitalPhotographId)
                </td>
            </tr>
        }

    </table>
</div>

